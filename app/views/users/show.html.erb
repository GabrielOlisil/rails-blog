<header class="container" style="height: 20rem">
  <div class="row gap-0 justify-content-center h-100 align-items-center">
    <h1 class="text-center text-uppercase"><%= @user.username %></h1>
    <p class="text-center">Essas são suas informações</p>
  </div>
</header>

<main class="container col-3">

  <div class="form-floating mb-3">
    <input class="form-control-plaintext" id="floatingUsername" readonly value="<%= @user.username %>"/>
    <label for="floatingUsername">Usuario</label>
  </div>
  <div class="form-floating mb-3">
    <input class="form-control-plaintext" id="floatingEmail" readonly value="<%= @user.email %>"/>
    <label for="floatingEmail">Email</label>
  </div>
  <div class="d-flex justify-content-around">
    <%= link_to "Alterar informações", profile_edit_path, class: "btn btn-secondary" %>
    <button class="btn btn-dark">Alterar Senha</button>

  </div>
</main>
