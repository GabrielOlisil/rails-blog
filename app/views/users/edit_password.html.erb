<header class="container" style="height: 20rem">
  <div class="row gap-0 justify-content-center h-100 align-items-center">
    <h1 class="text-center text-uppercase"><%= @user.username %></h1>
    <p class="text-center">Alterando sua senha</p>
  </div>
</header>

<main class="container col-3">
  <%= form_with model: @user, url: password_update_path, method: :patch do |form| %>

    <div class="form-floating">
      <%= render "shared/form_errors", object: form.object %>
    </div>

    <div class="form-floating mb-3">
      <%= form.password_field :old_password, required: true, class: "form-control", placeholder: "password" %>
      <%= form.label :old_password %>
    </div>

    <div class="form-floating mb-3">
      <%= form.password_field :password, required: true, class: "form-control", placeholder: "password" %>
      <%= form.label :password %>
    </div>

    <div class="form-floating mb-3">
      <%= form.password_field :password_confirmation, required: true, class: "form-control", placeholder: "password confirmation" %>
      <%= form.label :password_confirmation %>
    </div>

    <div class="mb-3 d-flex justify-content-end">
      <%= form.submit "Salvar", class: "btn btn-success" %>
    </div>
  <% end %>
</main>